{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/client/main.cpp",/*
                "${workspaceFolder}/src/shared/state/Action.cpp",
                "${workspaceFolder}/src/shared/state/BoatHold.cpp",
                "${workspaceFolder}/src/shared/state/Cards.cpp",
                "${workspaceFolder}/src/shared/state/Player.cpp",
                "${workspaceFolder}/src/shared/state/Resources.cpp",
                "${workspaceFolder}/src/shared/state/Treasure.cpp",*/
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lsfml-graphics",  // Link SFML graphics module
                "-lsfml-window",    // Link SFML window module
                "-lsfml-system"     // Link SFML system module
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}

